<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="awesome.com.cardreader.MainActivity">



    <TextView
        android:id="@+id/text_view_id_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/text_view_id_2"
        app:layout_constraintTop_toBottomOf="@+id/text_view_id_2"
        app:layout_constraintRight_toRightOf="@+id/text_view_id_2"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main" />

    <TextView
        android:id="@+id/text_view_id_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/text_view_id_3"
        app:layout_constraintTop_toBottomOf="@+id/text_view_id_3"
        app:layout_constraintRight_toRightOf="@+id/text_view_id_3"
        app:layout_constraintBottom_toTopOf="@+id/text_view_id_1" />

    <TextView
        android:id="@+id/text_view_id_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/text_view_id_4"
        app:layout_constraintTop_toBottomOf="@+id/text_view_id_4"
        app:layout_constraintRight_toRightOf="@+id/text_view_id_4"
        app:layout_constraintBottom_toTopOf="@+id/text_view_id_2" />

    <TextView
        android:id="@+id/text_view_id_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/text_view_id_3" />




</android.support.constraint.ConstraintLayout>
